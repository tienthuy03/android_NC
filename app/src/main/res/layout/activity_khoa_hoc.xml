<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KhoaHocActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/custom">

        <ImageView
            android:id="@+id/ivThoat"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_out"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="100dp"
            android:layout_marginTop="90dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/khoahoc"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginTop="110dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khoá Học"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-60dp"
        android:background="@drawable/custom_layout"
        android:orientation="vertical">


        <Button
            android:background="@drawable/custom_layout1"
            app:backgroundTint="@null"
            android:id="@+id/btnDKKhoaHoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="50dp"
            android:drawableTop="@drawable/course"
            android:text="Đăng ký khoá học"
            android:textColor="#E83B05"
            android:textStyle="bold"/>

        <Button
            android:background="@drawable/custom_layout1"
            app:backgroundTint="@null"
            android:id="@+id/btnKhoaHocDK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@drawable/courses"
            android:text="Khoá học của bạn"
            android:textColor="#E83B05"
            android:textStyle="bold"/>

    </LinearLayout>



</LinearLayout>