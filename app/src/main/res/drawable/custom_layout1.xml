<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="#ffffff"/>
            <corners
                android:radius="15dp"/>
            <stroke
                android:width="2dp"
                android:color="#ffffff"/>
            <padding
                android:top="20dp" />
        </shape>

    </item>
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#47B5FF"/>
            <corners
                android:radius="15dp"/>
            <stroke
                android:width="2dp"
                android:color="#6a8fbb"/>
            <padding
                android:top="20dp"/>
        </shape>
    </item>

</selector>